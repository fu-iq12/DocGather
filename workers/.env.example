# Redis (use local for dev, Upstash URL for prod)
REDIS_URL=redis://localhost:6380

# Supabase (from local Supabase CLI: supabase status)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_SERVICE_ROLE_KEY=your_local_service_key_here

# Worker secret (must match Supabase Vault)
FLY_WORKER_SECRET=dev_secret_change_in_production

# ============================================================================
# LLM Configuration
# ============================================================================

# Provider: "ovhcloud" (default) or "ollama"
LLM_VISION_PROVIDER=ovhcloud

# OVHcloud AI Endpoints
OVH_AI_API_KEY=your_ovhcloud_ai_api_key_here

# ============================================================================
# LLM Cache (optional - for development)
# ============================================================================

# Enable caching of LLM responses (saves API costs during development)
LLM_CACHE_ENABLED=false

# Cache directory (docker mount at /app/cache)
LLM_CACHE_DIR=/app/cache
