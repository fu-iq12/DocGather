# Core message broker connection (Upstash for Prod, Local Redis for Dev)
REDIS_URL=redis://localhost:6380

# Supabase connection mapping
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_SERVICE_ROLE_KEY=your_local_service_key_here

# (Deprecated) Legacy worker secret
FLY_WORKER_SECRET=dev_secret_change_in_production

# ============================================================================
# Unified LLM Routing Configuration (@see architecture/processing-workers.md)
# ============================================================================

# Primary vision abstraction provider
LLM_VISION_PROVIDER=ovhcloud

# Credentials for OVHcloud managed endpoint
OVH_AI_API_KEY=your_ovhcloud_ai_api_key_here

# ============================================================================
# File-based LLM Caching Layer (Development Optimization)
# ============================================================================

# Toggle persistent caching
LLM_CACHE_ENABLED=false

# Cache storage location (mapped via docker-compose)
LLM_CACHE_DIR=/app/cache
